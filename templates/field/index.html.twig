{% extends 'base.html.twig' %}

{% block title %}Hello FieldController!{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-xl-12 col-md-8">
            <div class="card card-default card-shadow">
                <div class="card-header">
                    <div class="card-title">
                        <h2>Les terrains</h2>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Noms</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for field in fields %}
                            <tr>
                                <td>{{ field.name|raw }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
