{% extends 'base.html.twig' %}

{% block title %}Hello SportMatchController!{% endblock %}

{% block body %}
    {% embed '_includes/actionbar.html.twig' %}
        {% block actionbar %}
            <a href="{{ path('sport_match_create') }}" class="link-create">Cr√©er un match</a>
        {% endblock actionbar %}
    {% endembed %}

    <div class="row">
        <div class="col-xl-12 col-md-8">
            <div class="card card-default card-shadow">
                <div class="card-header">
                    <div class="card-title">
                        <h2>Les matchs</h2>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Equipe 1</th>
                                <th>Equipe 2</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for sportMatch in sportMatchs %}
                            <tr>
                                <td>{{ sportMatch.firstTeam.name|raw }}</td>
                                <td>{{ sportMatch.secondTeam.name|raw }}</td>
                                <td><a href="{{ path('sport_match_show', {'id': sportMatch.id}) }}" class="link-primary">Voir</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
