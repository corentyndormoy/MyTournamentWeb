{% extends 'base.html.twig' %}

{% block title %}{{ sportMatch.tournament.name }}{% endblock %}

{% block body %}

    <div class="col-xl-12 col-md-8">
        <div class="card card-default card-shadow">
            <div class="card-header">
                <div class="card-title">
                    <h2>Match du tournois {{ sportMatch.tournament.name }}</h2>
                </div>
            </div>
            <div class="card-body">
                <div class="row">
                    {% if sportMatch.firstTeamScore is null %}
                        <div class="text-center">0 - 0</div>
                        <button type="button" class="btn btn-primary">Lancer le match</button>
                    {% else %}
                        <div class="text-center">{{ sportMatch.firstTeamScore }} - {{ sportMatch.secondTeamScore }}</div>
                    {% endif %}
                </div>
                <div class="row">
                    <div class="text-center">{{ sportMatch.duration|date("h:i") }}</div>
                </div>
                <div class="text-center">Le match du toirnois {{ sportMatch.tournament.name }} qui oppose l'équipe {{ sportMatch.firstTeam.name }} à l'équipe {{ sportMatch.secondTeam.name }} aura lieu le {{ sportMatch.startingAt|date("d/m/Y") }} sur le terrain {{ sportMatch.field.name }}.</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6 col-md-8">
            <div class="card card-default card-shadow">
                <div class="card-header">
                    <div class="card-title">
                        <h2>{{ sportMatch.firstTeam.name }}</h2>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <ul>
                            {% for player in sportMatch.firstTeam.player %}
                                <li>{{ player.firstName }} {{ player.lastName }}</li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-xl-6 col-md-8">
            <div class="card card-default card-shadow">
                <div class="card-header">
                    <div class="card-title">
                        <h2>{{ sportMatch.secondTeam.name }}</h2>
                    </div>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-12">
                            <ul>
                            {% for player in sportMatch.secondTeam.player %}
                                <li>{{ player.firstName }} {{ player.lastName }}</li>
                            {% endfor %}
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <a href="{{ path('place') }}" class="link-primary">Retour</a>

{% endblock %}
