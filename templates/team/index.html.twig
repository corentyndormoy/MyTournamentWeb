{% extends 'base.html.twig' %}

{% block title %}Equipes{% endblock %}

{% block body %}

    <h1>Les équipes</h1>
    <table>
        <thead>
            <tr>
                <th>Noms</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for team in teams %}
            <tr>
                <td>{{ team.name|raw }}</td>
                <td><a href="{{ path('team_show', {'id': team.id}) }}" class="btn-primary">Voir</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('team_create') }}" class="btn-create">Créer une équipe</a>


{% endblock %}
