{% extends 'base.html.twig' %}

{% block title %}{{ place.town }}{% endblock %}

{% block body %}

    <div class="col-xl-12 col-md-8">
        <div class="card card-default card-shadow">
            <div class="card-header">
                <div class="card-title">
                    <h2>{{ place.town }}</h2>
                </div>
            </div>
            <div class="card-body">
                <div class="place-details">
                    {{ place.postcode }}
                    {{ place.street }}
                    {{ place.country }}
                </div>

                <section id="fields">
                <h3>Liste des terrains:</h3>
                {% for field in place.fields %}
                    <ul>
                        <li>{{ field.name }}</li>
                    </ul>
                {% endfor %}
                </section>
            </div>
        </div>
    </div>

    <a href="{{ path('place') }}" class="link-primary">Retour</a>

{% endblock %}
