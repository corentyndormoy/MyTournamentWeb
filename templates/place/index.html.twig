{% extends 'base.html.twig' %}

{% block title %}Lieux{% endblock %}

{% block body %}

    {% embed '_includes/actionbar.html.twig' %}
        {% block actionbar %}
            <a href="{{ path('place_create') }}" class="link-create">Cr√©er un lieu</a>
        {% endblock actionbar %}
    {% endembed %}

    <div class="row">
        <div class="col-xl-12 col-md-8">
            <div class="card card-default card-shadow">
                <div class="card-header">
                    <div class="card-title">
                        <h2>Les lieux</h2>
                    </div>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Villes</th>
                                <th></th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for place in places %}
                            <tr>
                                <td>{{ place.town|raw }}</td>
                                <td><a href="{{ path('place_add_field', {'id': place.id}) }}" class="link-primary">Ajouter un terrain</a></td>
                                <td><a href="{{ path('place_show', {'id': place.id}) }}" class="link-primary">Voir</a></td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
