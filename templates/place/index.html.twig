{% extends 'base.html.twig' %}

{% block title %}Lieux{% endblock %}

{% block body %}

    <h1>Les lieux</h1>
    <table>
        <thead>
            <tr>
                <th>Ville</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for place in places %}
            <tr>
                <td>{{ place.town|raw }}</td>
                <td><a href="{{ path('place_add_field', {'id': place.id}) }}" class="btn-primary">Ajouter un terrain</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('place_create') }}" class="btn-create">Cr√©er un lieu</a>


{% endblock %}
