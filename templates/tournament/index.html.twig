{% extends 'base.html.twig' %}

{% block title %}Tournois{% endblock %}

{% block body %}

    <h1>Les tournois</h1>
    <table>
        <thead>
            <tr>
                <th>Noms</th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
        {% for tournament in tournaments %}
            <tr>
                <td>{{ tournament.name|raw }}</td>
                <td><a href="{{ path('tournament_edit', {'id': tournament.id}) }}" class="btn-primary">Modifier</a></td>
                <td><a href="{{ path('tournament_show', {'id': tournament.id}) }}" class="btn-primary">Voir</a></td>
                <td><a href="{{ path('tournament_delete', {'id': tournament.id}) }}" class="btn-primary">Supprimer</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('tournament_create') }}" class="btn-create">Cr√©er un tournois</a>


{% endblock %}
